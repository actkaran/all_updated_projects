{
    "manifest_version": 3,
    "name": "Custom Text Reflector",
    "version": "1.0",
    "description": "Enter text to display on the current webpage.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  